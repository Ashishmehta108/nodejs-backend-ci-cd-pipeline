{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",       // Changed from es2022 â†’ Node can run directly, Jest works
    "outDir": "dist",
    "rootDir": ".",             // Keep rootDir as project root to include src + tests
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": [
    "src",
    "tests"
  ]
}
